/* https://github.com/tsconfig/bases/blob/main/bases/node-ts.json */
/* https://tsx.is/typescript#recommendation */
/* https://github.com/vitejs/vite/blob/main/packages/create-vite/template-react-ts/tsconfig.node.json */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Language and Environment */
    "lib": [
      "ES2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],

    /* Modules */
    "module": "preserve",
    "moduleResolution": "bundler",
    "types": ["node"]
  },
  "include": ["config/", "scripts/", "*.ts"]
  // "exclude": ["**/tests/", "**/*.test.*"]
}
