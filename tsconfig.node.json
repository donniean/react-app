// https://github.com/tsconfig/bases/blob/main/bases/node-ts.json
// https://github.com/vitejs/vite/blob/main/packages/create-vite/template-react-ts/tsconfig.node.json
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "ES2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    // https://tsx.is/typescript#recommendation
    "module": "preserve",
    "types": ["node"],

    "moduleResolution": "bundler"
  },
  "include": ["**/*.ts"],
  "exclude": [
    "**/node_modules/",
    "**/dist/",
    "**/coverage/",
    "src/",
    "**/tests/",
    "**/*.test.*"
  ]
}
